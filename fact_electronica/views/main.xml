<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="account_invoice_form_fact" model="ir.ui.view">
            <field name="name">account.invoice.form.fact</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="tipo_documento" attrs="{'readonly':[('state','!=','draft')]}"/>
                </field>
                <xpath expr="//page[3]" position="after">
                    <page string="Facturacion Electronica">
                        <group string="Datos de emision" col="4" colspan="4">
                            <field name="cod_sucursal" />
                            <field name="cod_puntoventa" />
                            <field name="tipo_moneda" />
                            <field name="tipo_cambio"/>
                            <field name="metodo_pago"/>
                            <field name="integracion"/>
                        </group>

                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_invoice_line_form_fact" model="ir.ui.view">
            <field name="name">account.invoice.line.form.fact</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_form"/>
            <field name="arch" type="xml">
                <field name="product_id" position="before">
                    <field name="actividad_sin"/>
                    <field name="cod_sin"/>
                    <field name="unidad_sin"/>
                </field>
            </field>
        </record>

        <record id="view_product_template_form_fact" model="ir.ui.view">
            <field name="name">view.product.template.form.fact</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="barcode" position="after">
                    <field name="actividad_sin"/>
                    <field name="cod_sin"/>
                    <field name="unidad_sin"/>
                </field>
            </field>
        </record>
    </data>
</openerp>